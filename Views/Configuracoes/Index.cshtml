@model IEnumerable<BIBLIOTECA_APOSTILA.Models.Configuracoes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiasEmprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorMulta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiasEmprestimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorMulta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
